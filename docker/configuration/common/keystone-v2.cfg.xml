<?xml version="1.0" encoding="UTF-8"?>

<keystone-v2 xmlns="http://docs.openrepose.org/repose/keystone-v2/v1.0" ignored-roles="identity:admin">
    <identity-service
            username="xxxxxxxxxx"
            password="xxxxxxxxxx"
            uri="https://staging.identity-internal.api.rackspacecloud.com"
            connection-pool-id="client-auth-pool"
            set-roles-in-header="true"         
            set-groups-in-header="true"        
            set-catalog-in-header="false" />
    <delegating quality="0.9"/>
    <cache>
        <timeouts variability="10">
            <token>600000</token>
            <group>60000</group>
        </timeouts>
    </cache>
    <!--tenant-handling send-all-tenant-ids="true" /--> 
</keystone-v2>
