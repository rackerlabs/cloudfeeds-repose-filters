<?xml version="1.0" encoding="UTF-8"?>

<keystone-v2-authorization xmlns="http://docs.openrepose.org/repose/keystone-v2/v1.0">
    <delegating quality="0.8"/> 
    <!-- TBD: Needs templating for configuration -->
    <pre-authorized-roles> 
        <role>cloudfeeds:service-admin</role>
        <role>cloudfeeds:service-observer</role>
        <role>cloudfeeds:billing-publisher</role>
        <role>cloudfeeds:customer_access_policy-publisher</role>
        <role>cloudfeeds:ticketing-publisher</role>
        <role>cloudfeeds:ticketing-integration-publisher</role>
        <role>cloudfeeds:user-integration-publisher</role>
        <role>cloudfeeds:eps-publisher</role> 
    </pre-authorized-roles>
    <white-list>
        <uri-regex>/buildinfo$</uri-regex> 
    </white-list>
    <tenant-handling send-all-tenant-ids="true">
        <validate-tenant>
            <header-extraction-name>Requested-Tenant-Id</header-extraction-name>
        </validate-tenant>
    </tenant-handling>   
</keystone-v2-authorization>
